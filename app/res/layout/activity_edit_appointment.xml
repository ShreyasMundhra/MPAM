<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation= "vertical"
    tools:context=".EditAppointmentActivity">



    <TextView android:text="@string/new_appt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/select_date"
        android:textSize="17sp"
        android:textColor="@color/frame"/>

    <DatePicker
        android:id="@+id/dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!--separator line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/frame"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="5dp"/>


    <TextView android:text="@string/new_appt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_appointment_type"
        android:textSize="17sp"
        android:textColor="@color/frame"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        />

    <TimePicker
        android:id="@+id/tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!--separator line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/frame"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="5dp"/>

    <TextView android:text="@string/new_appt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_type"
        android:textSize="17sp"
        android:textColor="@color/frame"/>


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ENT_treatment"
            android:id="@+id/radioButton1"
            android:layout_marginLeft="55dp"
            android:textSize="14sp"
            android:textColor="@color/frame"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dental_treatment"
            android:id="@+id/radioButton2"
            android:layout_marginLeft="55dp"
            android:textSize="14sp"
            android:textColor="@color/frame"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/women_health"
            android:id="@+id/radioButton3"
            android:layout_marginLeft="55dp"
            android:textSize="14sp"
            android:textColor="@color/frame"/>

    </RadioGroup>

    <!--separator line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/frame"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/frame"
        android:background="@drawable/frame"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</ScrollView>
